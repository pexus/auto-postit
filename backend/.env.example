# ============================================================================
# Auto-PostIt Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# Server
NODE_ENV=development
PORT=3001

# Database (for local development with docker-compose.yml)
DATABASE_URL=postgresql://autopostit:autopostit_dev_password@localhost:5432/autopostit

# Redis (for local development with docker-compose.yml)
REDIS_URL=redis://localhost:6379

# Session & Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-min-32-chars-here
COOKIE_SECRET=your-cookie-secret-min-32-chars-here
TOKEN_ENCRYPTION_KEY=your-64-char-hex-key-for-aes-256-encryption-here
CSRF_SECRET=your-csrf-secret-min-32-chars-here

# CORS
CORS_ORIGIN=http://localhost:5173

# MFA
MFA_ISSUER=Auto-PostIt

# ============================================================================
# OAuth Credentials (Optional - add as needed)
# ============================================================================

# Twitter/X API v2
# Get credentials at: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=http://localhost:3001/public/oauth/twitter/callback

# LinkedIn
# Get credentials at: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_CALLBACK_URL=http://localhost:3001/public/oauth/linkedin/callback

# Facebook / Instagram
# Get credentials at: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3001/public/oauth/facebook/callback
INSTAGRAM_CALLBACK_URL=http://localhost:3001/public/oauth/instagram/callback

# Google (YouTube)
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/public/oauth/youtube/callback

# Pinterest
# Get credentials at: https://developers.pinterest.com/apps/
PINTEREST_APP_ID=
PINTEREST_APP_SECRET=
PINTEREST_CALLBACK_URL=http://localhost:3001/public/oauth/pinterest/callback
