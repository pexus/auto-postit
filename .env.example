# Auto-PostIt Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/autopostit"

# =============================================================================
# REDIS
# =============================================================================
# Redis connection for job queue and caching
REDIS_URL="redis://localhost:6379"

# =============================================================================
# SECURITY - GENERATE THESE WITH: openssl rand -hex 32
# =============================================================================
# Session encryption secret (64 hex characters)
SESSION_SECRET="generate-with-openssl-rand-hex-32"

# OAuth token encryption key (64 hex characters)
TOKEN_ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# CSRF protection secret (64 hex characters)
CSRF_SECRET="generate-with-openssl-rand-hex-32"

# =============================================================================
# SOCIAL PLATFORM CREDENTIALS
# =============================================================================

# Twitter/X API
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""
TWITTER_CALLBACK_URL="${FRONTEND_URL}/api/oauth/twitter/callback"

# LinkedIn API
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""
LINKEDIN_CALLBACK_URL="${FRONTEND_URL}/api/oauth/linkedin/callback"

# Facebook/Instagram API
# Get from: https://developers.facebook.com/apps
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_CALLBACK_URL="${FRONTEND_URL}/api/oauth/facebook/callback"

# Instagram uses Facebook credentials
INSTAGRAM_CALLBACK_URL="${FRONTEND_URL}/api/oauth/instagram/callback"

# YouTube/Google API
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
YOUTUBE_CALLBACK_URL="${FRONTEND_URL}/api/oauth/youtube/callback"

# Pinterest API
# Get from: https://developers.pinterest.com/apps/
PINTEREST_APP_ID=""
PINTEREST_APP_SECRET=""
PINTEREST_CALLBACK_URL="${FRONTEND_URL}/api/oauth/pinterest/callback"

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage path (relative to backend root)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE_MB=100

# Optional: S3-compatible storage
# S3_ENDPOINT=""
# S3_BUCKET=""
# S3_ACCESS_KEY=""
# S3_SECRET_KEY=""
# S3_REGION=""

# =============================================================================
# LOGGING
# =============================================================================
# Log levels: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================
# Login attempts per 15 minutes per IP
LOGIN_RATE_LIMIT=5

# API requests per minute per user
API_RATE_LIMIT=100

# Public endpoint requests per minute per IP
PUBLIC_RATE_LIMIT=20

# =============================================================================
# MFA SETTINGS
# =============================================================================
# TOTP issuer name (shown in authenticator apps)
MFA_ISSUER="Auto-PostIt"

# Number of backup codes to generate
MFA_BACKUP_CODE_COUNT=10

# =============================================================================
# ACCOUNT SECURITY
# =============================================================================
# Failed login attempts before lockout
MAX_FAILED_ATTEMPTS=5

# Lockout duration in minutes
LOCKOUT_DURATION_MINUTES=15

# Session expiry in hours
SESSION_EXPIRY_HOURS=24
